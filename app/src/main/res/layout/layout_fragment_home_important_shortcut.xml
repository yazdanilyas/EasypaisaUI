<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10dp"
        app:cardElevation="@dimen/_4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/_10dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:id="@+id/sendMoneyImg"
                android:layout_marginStart="@dimen/_3dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send_money"
                app:layout_constraintEnd_toStartOf="@+id/easyLoadImg"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/easyLoadImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_easy_load"
                app:layout_constraintEnd_toStartOf="@+id/mobilePackagesImg"
                app:layout_constraintStart_toEndOf="@id/sendMoneyImg"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mobilePackagesImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mobile_packages"
                app:layout_constraintEnd_toStartOf="@+id/billPaymentImg"
                app:layout_constraintStart_toEndOf="@id/easyLoadImg"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/billPaymentImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bill_payment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mobilePackagesImg"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sendMoneyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_money"
                android:textSize="@dimen/_10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/sendMoneyImg"
                app:layout_constraintStart_toStartOf="@id/sendMoneyImg"
                app:layout_constraintTop_toBottomOf="@+id/sendMoneyImg" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/easyLoadTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/easyload"
                android:textSize="@dimen/_10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/easyLoadImg"
                app:layout_constraintStart_toStartOf="@id/easyLoadImg"
                app:layout_constraintTop_toBottomOf="@+id/easyLoadImg" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mobilePackagesTv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/mobile_packages"
                android:textSize="@dimen/_10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/mobilePackagesImg"
                app:layout_constraintStart_toStartOf="@id/mobilePackagesImg"
                app:layout_constraintTop_toBottomOf="@+id/mobilePackagesImg" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/billPaymentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bill_payment"
                android:textSize="@dimen/_10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/billPaymentImg"
                app:layout_constraintStart_toStartOf="@id/billPaymentImg"
                app:layout_constraintTop_toBottomOf="@+id/billPaymentImg" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>